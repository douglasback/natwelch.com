/*
	Style code for Natwelch.com
	by Nathaniel "Nat" Welch
*/

body {
	font-family: Verdana, Arial, Helvetica, sans-serif;
	color: #0099FF;
	background-color: #90A0AA;
	font-size: 12px;
}

strong {
	font-weight: 900;
	font-size: 14px;
}

.quote{
	width: 395px;
	text-align: justify;
	padding: 10px;
	margin: 2px;
	margin-left: auto;
	margin-right: auto;
	clear: left;
	display: inline;
	float: left;
	background-color: #000000;
	border: #6e8083 solid 3px;
}

.lighter {
	background-color: #798c90 !important;
	color: #333333;
	}

.lighter a{
	color: #246 !important;
	}

.all {
	margin: 0 auto;
	width: 400px;
	border: none;
}
.header {
	font-family:"Courier New", Courier, monospace;
	text-align: center;
	font-weight: bold;
	font-variant: small-caps;
	font-size: 14px;
}
a
{
	color: #006699;
	text-decoration: none;
}

a:hover {
	text-decoration: line-through;
	}

p {
	text-indent: 25px;
	}

li {
	list-style: none;
	}
	
.footer {
	margin-left: auto;
    margin-right: auto;
	width: 400px;
	margin-top: 40px;
	margin-bottom: 10px;
	display: inline;
	float: left;
	text-align: center;
	}
	
a img {
	border: none;
	}
	
/* LIFESTREAM STUFF */

ul.ls {
	list-style-type: none;
	list-style-position: outside;
}
li.entry a {
	text-decoration: none;
}
li.entry a:link, li.entry a:visited {
	display: block;
	margin: 0;
	padding: 10px;
	border-top: 1px solid #333333;
	border-bottom: 1px solid;
	color: #0000FF;
	background-color: #999999;
}
li.entry p.title {
	padding-left:20px;
}
li.entry  a[href ^='http://twitter'], li.entry a[href ^='http://twitter']:visited {
 background: #003366  !important;
 color: #fff !important;
}
li.entry a[href ^='http://www.flickr'], li.entry a[href ^='http://www.flickr']:visited {
 background: #333333 !important;
 color: #fff !important;
}
 li.entry a[href ^='http://pownce'], li.entry a[href ^='http://pownce']:visited {
 background: #003300 !important;
 color: #fff !important;
}
 li.entry a[href ^='http://www.last.fm'], li.entry a[href ^='http://www.last.fm']:visited {
 background: #660000 !important;
 color: #fff !important;
}
li.entry a[href ^='http://pseudoweb.net'], li.entry a[href ^='pseudoweb.net']:visited {
 background: #2F4B5A !important;
 color: #fff !important;
}
 li.entry a[href ^='http://wordie.org'], li.entry a[href ^='wordie.org']:visited {
 background: #111 !important;
 color: #fff !important;
}
li.entry a[href ^='http://upcoming.yahoo.com'], li.entry a[href ^='http://upcoming.yahoo.com']:visited {
 background: #CC0000 !important;
 color: #fff !important;
}
li.entry .date {
	font-size: 75%;
}

img.favicon {
	width:16px;
	height:16px;
	float: left;
	border: none;
	background-color: transparent;
	margin-right: 5px;
}

dt {
	padding-top: 12px;
	}

ul.ls, li.entry, ol.ls {
	margin: 0;
	padding: 0;
	color: #0099FF;
	background: #000000;
}
